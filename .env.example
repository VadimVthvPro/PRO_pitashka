# ============================================
# PROpitashka Bot Configuration
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# --------------------------------------------
# Telegram Bot
# --------------------------------------------
TOKEN=your_telegram_bot_token_here

# --------------------------------------------
# AI Services
# --------------------------------------------
GEMINI_API_KEY=your_gemini_api_key_here
GIGA=your_base64_encoded_gigachat_credentials
gpt=your_yandex_gpt_api_key

# --------------------------------------------
# PostgreSQL Database
# --------------------------------------------
DB_NAME=propitashka
DB_USER=postgres
DB_PASSWORD=your_secure_database_password
DB_HOST=localhost
DB_PORT=5432
DB_SSLMODE=prefer

# --------------------------------------------
# Redis (for caching)
# --------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# --------------------------------------------
# Admin Panel
# --------------------------------------------
ADMIN_DB_USER=admin_user
ADMIN_DB_PASSWORD=your_admin_password
ADMIN_SECRET_KEY=your_random_secret_key_here

# --------------------------------------------
# Application Settings
# --------------------------------------------
ENVIRONMENT=development
LOG_LEVEL=INFO

# --------------------------------------------
# Feature Flags
# --------------------------------------------
CACHE_ENABLED=true
ANALYTICS_ENABLED=false
REFERRAL_ENABLED=false
